<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Admin.AdminAddVacanciesActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавить вакансию"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="221dp" />

    <EditText
        android:id="@+id/vacancy_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Название профессии"
        android:padding="20dp"
        android:background="@drawable/input_design"
        android:layout_below="@id/title_text"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:inputType="textMultiLine"
        />
    <EditText
        android:id="@+id/vacancy_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Зароботная плата"
        android:padding="20dp"
        android:layout_below="@id/vacancy_name"
        android:background="@drawable/input_design"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:inputType="textMultiLine"
        />
    <EditText
        android:id="@+id/vacancy_exp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Опыт работы"
        android:padding="20dp"
        android:layout_below="@id/vacancy_price"
        android:background="@drawable/input_design"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:inputType="textMultiLine"
        />
    <EditText
        android:id="@+id/vacancy_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Время работы"
        android:padding="20dp"
        android:layout_below="@id/vacancy_exp"
        android:background="@drawable/input_design"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:inputType="textMultiLine"
        />
    <EditText
        android:id="@+id/vacancy_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Город"
        android:padding="20dp"
        android:layout_below="@id/vacancy_time"
        android:background="@drawable/input_design"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:inputType="textMultiLine"
        />
    <EditText
        android:id="@+id/vacancy_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Адресс предприятия"
        android:padding="20dp"
        android:layout_below="@id/vacancy_city"
        android:background="@drawable/input_design"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:inputType="textMultiLine"
        />
    <EditText
        android:id="@+id/vacancy_skill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ключевые навыки"
        android:padding="20dp"
        android:layout_below="@id/vacancy_address"
        android:background="@drawable/input_design"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:inputType="textMultiLine"
        />
    <EditText
        android:id="@+id/vacancy_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Описание"
        android:padding="20dp"
        android:layout_below="@id/vacancy_skill"
        android:background="@drawable/input_design"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:inputType="textMultiLine"
        />
        <EditText
            android:id="@+id/vacancy_conect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Способы связи(телефон, почта, соц.сети)"
            android:padding="20dp"
            android:layout_below="@id/vacancy_description"
            android:background="@drawable/input_design"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:inputType="textMultiLine"
            />
        <Button
            android:id="@+id/add_new_vacancy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vacancy_conect"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button"
            android:layout_centerHorizontal="true"
            android:text="Добавить вакансию"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="italic|bold"
            />
    </RelativeLayout>
</ScrollView>